/* pages/personal-information/index.wxss */
page{
  background: #cdf2f1;
}
/* 头部 */
.nickname-container{
  width:100%;
  height: 348rpx;
  background: url(http://127.0.0.1:8080/images/pi-bg.png) top center;
  text-align: center;
  color:#333;
  background-position: top center;
  background-size: 100% auto;
}
.nickname-container .avatar {
  width:140rpx;
  height: 140rpx;
  margin:0 auto;
  padding-top:85rpx;
  position: relative;
}
.nickname-container .avatar .avatar_img{
  width:112rpx;
  height: 112rpx;
  margin:0 auto;
  border-radius: 50%;
  border:2rpx solid #0090ec;
}
.nickname-container .avatar .grows_value{
  width:90rpx;
  height: 28rpx;
  position: absolute;
  bottom:24rpx;
  right:-40rpx;
}
.nickname-container .avatar .value{
  width:90rpx;
  height: 28rpx;
  position: absolute;
  bottom:24rpx;
  right:-31rpx;
  font-size:20rpx;
  color:#fff;
  text-align: right;
}
.nickname-container .nickname{
  font-size:36rpx;
  margin-top:-15rpx;
}
.nickname-container .edit{
  /* margin-top:10rpx; */
  font-size:24rpx;
  color:#888888;
  align-items: center;
  display: flex;
  justify-content: center;
}
.nickname-container .edit image{
  width:44rpx;
  height: 44rpx;
  /* margin-top:20rpx; */
}
/* 导航 */
.nav-box{
  width:100%;
  margin:10rpx auto;
  background: #cdf2f1;
  padding-top:5rpx;
  padding-bottom:10rpx;
  margin-top:40rpx;
}
.nav-container{
  width:675rpx;
  display: flex;
  margin:0 auto;
  margin-top:40rpx;
}
.nav-container .nav-item{
  width:33.33%;
  font-size:24rpx;
  color:#a5a5a5;
} 
.nav-container .nav-item button{
  width:100%;
  padding:0rpx;
  margin:0rpx;
  background: #cdf2f1;
  font-size:24rpx;
  color:#333;
  text-align: center;
}
.nav-container .nav-item button::after{
  border: none;
}
.nav-container .nav-item image{
  width:64rpx;
  height: 64rpx;
  display: block;
  margin:10rpx auto;
}
.nav-container .nav-item text{
  display: block;
  width:100%;
  text-align: center;
}

/* 底部布局 */
.footer{
  width:100%;
  position:fixed;
  bottom:0;
  height: 100rpx;
 background: #fff;
 border-top:2rpx solid #dddddd;
  display: flex;
  justify-content: space-between;
}
.footer .item{
  width:50%;
  text-align: center;
}
.footer .border-left{
  border-right: 2rpx solid #dddddd;
  height: 60rpx;
  margin-top:20rpx;
}
.footer .item button{
  width:33.33%;
  text-align: center;
  background: #fff;
  padding:0rpx;
  
}
.footer .item button::after{
  border: none;
}
.footer .item image{
  /* margin-top:10rpx; */
  width:42rpx;
  height: 42rpx;
  /* margin-bottom:-20rpx; */
}
.footer .item text{
  margin-top:-43rpx;
  display: block;
  font-size:22rpx;
  color:#555555;
}
.footer button .active{
  color:#ff8b00;
}
.footer .active button::after{
  border:none;
}