/* 礼物盒 */
.git-box{
  width:169rpx;
  height: 118rpx;
  position: fixed;
  bottom:350rpx;
  right:0rpx;
}
.git-box .bg-gif image{
  width:169rpx;
  height: 118rpx;
}
.git-box .gif-img{
  position: absolute;
  width:60rpx;
  height: 70rpx;
  top:24rpx;
  left:29rpx;
  animation-duration: 4s;
  animation-name: gif;
  animation-delay:2s; 
  animation-iteration-count: infinite;
}
@keyframes gif{
  0%{
    transform: rotate(0deg)
  }
  25%{
    transform: rotate(135deg)
  }
  50%{
    transform: rotate(0deg)
  }
  75%{
    transform: rotate(-135deg)
  }
  100%{
    transform: rotate(0deg)
  }
}
