/* pages/study-record/index.wxss */
page{
  background: #cdf2f1;
}
/* 新闻中心 */
.resume{
  width:100%;
  background: #cdf2f1;
  margin-top:10rpx;
}
.resume .main-title{
  width:700rpx;
  margin:0rpx auto;
  padding-top:20rpx;
  padding-bottom:20rpx;
  font-size:32rpx;
  color:#0090ec;
  font-weight: bold;
}
.resume .title{
  width:700rpx;
  margin:0rpx auto;
  align-items: center;
  display: flex;
  padding-top:20rpx;
  padding-bottom:20rpx;
  justify-content: space-between;
}
.resume .title text{
  font-size:32rpx;font-weight: bold;color:#333;
}
.resume .title image{
  width:16rpx;
  height: 30rpx;
}
.resume .list-container{
  width:100%;
}
.resume .list-container .list-item{
  width:700rpx;
  display: flex;
  justify-content: space-between;
  margin:45rpx auto;
}
.resume .list-container .list-item .left{
  width:190rpx;
  height: 190rpx;
  align-items: center;
  border-radius: 15rpx;
}
.resume .list-container .list-item .left image{
  width:350rpx;
  height: 200rpx;
  margin:5rpx 5rpx;
  border-radius: 15rpx;
  border:4rpx solid #fff;
}
.resume .list-container .list-item .right{
  width:300rpx;
}
.resume .list-container .list-item .right .title{
  width:300rpx;
  overflow: hidden;
  /* height: 160rpx; */
  font-size:30rpx;
  color:#333;
  padding:0;
  font-weight: bold;
  text-overflow:ellipsis;
  display:-webkit-box;
  -webkit-box-orient:vertical;
  -webkit-line-clamp:2;
  margin-top:10rpx;
}
.resume .list-container .list-item .right .score{
  display: flex;
  font-size:24rpx;
  margin-top:30rpx;
  color:#888;
  padding:0;
}
.resume .list-container .list-item .right .subtitle{
  display: flex;
  justify-content: space-between;
  font-size:24rpx;
  margin-top:30rpx;
  color:#888;
  padding:0;
  
}
.resume .list-container .list-item .right .sign-container{
  width:100%;
  display: flex;
  border-radius: 5rpx;
  margin-top:20rpx;
  align-items: center;
}
.resume .list-container .list-item .right .sign-container text{
  display: block;
  font-size:28rpx;
  padding:2rpx 10rpx;
  margin-right: 10rpx;
  color:#555555;
}
.resume .list-container .list-item .right .sign-container image{
  width:11rpx;
  height: 18rpx;
}